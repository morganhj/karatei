<div class="container pt-4" style="margin-bottom: 80px;">
	<% @collections.each do |collection| %>
		<div class="row border-bottom my-4">
			<div class="col-6 pl-4 d-flex align-items-center">
				<span style="overflow: hidden; width: 100%;"><%= link_to "#{collection.title}", collection_path(collection.id), class: "text-dark py-4 px-2 overflow-hidden" %></span>				
			</div>
			<div class="col-6 d-flex text-center pt-3">
				<%= simple_form_for collection do |f| %>
				  <%= f.input :percentage, as: :range, html_input: { type: 'range', min: 0, max: 100}, label: false %>
				<% end %>
				<span data-collection-id="edit_collection_<%= collection.id %>" class="ml-3"></span>
			</div>

		</div>
	<% end %>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-shack bg-gray-300" style="position: fixed; top: 0; width: 100%;">
  <div class="container">

    <%= link_to root_path, class: "navbar-brand d-flex" do %>
      <%#= cl_image_tag "karatei-logo", height: 400, width: 400, crop: :fit, class: "my-auto" %>
      <h2 class="my-auto border-bottom">Karatei</h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse bg-gray-300" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown ml-3">
            <%= cl_image_tag current_user.user_avatar, height: 300, width: 300, crop: :fill, gravity: :faces, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <h5 class="dropdown-header px-0 mb-2 text-primary">Hello <%= current_user.nickname %>!</h5>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <h6 class="mb-0">
              <a href="#" class="nav-link">How it works</a>
            </h6>
          </li>        
          <li class="nav-item">
            <h6 class="mb-0">
              <a href="#" class="nav-link">FAQs</a>
            </h6>
          </li>
          <li class="nav-item">
            <h6 class="mb-0">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </h6>
          </li>
          <li class="nav-item">
            <h6 class="mb-0">
              <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
            </h6>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>

<div class="buffer" style="height: 62.19px"></div>

<div class="container">
	<div class ="row justify-content-center">
		<div class="col-12 col-lg-8">
			<div class="shadow-sm p-5 bg-white rounded">

				<h1>Add Source</h1>

				<%= simple_form_for([@collection, @source]) do |f| %>
				<%= f.error_notification %>

				<div class="form-inputs">
					<%= f.input :title,
					required: true,
					autofocus: true,
					input_html: { autocomplete: "title" }%>
					<%= f.input :url,
					required: true,
					autofocus: true,
					input_html: { autocomplete: "title" }%>
				</div>

				<div class="form-actions">
					<%= f.button :submit, "Add Source", class: "btn btn-secondary" %>
				</div>
				<% end %>
				
			</div>
		</div>
	</div>
</div>